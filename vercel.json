{
  "version": 2,
  "builds": [
    {
      "src": "client/src/main.tsx",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../dist"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "outputDirectory": "client/dist"
}