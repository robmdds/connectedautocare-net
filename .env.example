# Development Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tpa_platform

# Session Configuration (Required for Replit Auth)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Replit Authentication (Required)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.dev,your-custom-domain.com

# Helcim Payment Integration
PAYMENTS_PROVIDER=helcim
HELCIM_API_BASE=https://api.helcim.com
HELCIM_API_TOKEN=your-helcim-api-token
HELCIM_ACCOUNT_ID=your-helcim-account-id
HELCIM_WEBHOOK_SECRET=your-helcim-webhook-secret

# VIN Decode Services
CHROMEDATA_API_KEY=your-chromedata-api-key-optional
NHTSA_API_BASE=https://vpic.nhtsa.dot.gov/api

# AI Assistant (OpenAI)
OPENAI_API_KEY=your-openai-api-key

# Object Storage (if using file uploads)
PUBLIC_OBJECT_SEARCH_PATHS=/bucket1/public,/bucket2/assets
PRIVATE_OBJECT_DIR=/bucket1/private

# Tax Calculation
TAX_API_PROVIDER=avalara
TAX_API_KEY=your-tax-api-key-optional
TAX_API_ENDPOINT=https://api.avalara.com

# Email Service (for notifications)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-api-key-optional
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# Document Generation
DOCUSIGN_API_KEY=your-docusign-api-key-optional
DOCUSIGN_CLIENT_ID=your-docusign-client-id-optional
ADOBE_SIGN_API_KEY=your-adobe-sign-api-key-optional

# Analytics (Optional)
POSTHOG_KEY=your-posthog-key-optional
POSTHOG_HOST=https://app.posthog.com

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_VIN_DECODE=true
ENABLE_REAL_PAYMENTS=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Multi-tenant Configuration
DEFAULT_TENANT_ID=default
ENABLE_MULTI_TENANT=true

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-for-additional-tokens
ENCRYPTION_KEY=your-32-character-encryption-key

# Development Tools
ENABLE_DEBUG_LOGGING=true
ENABLE_SQL_LOGGING=false
MOCK_EXTERNAL_APIS=false

# Performance
DATABASE_POOL_SIZE=10
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
